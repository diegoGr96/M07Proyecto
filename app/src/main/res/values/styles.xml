<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="botones">
        <item name="android:background">@drawable/back</item>
        <item name="android:textColor">@color/letraBlanca</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="editText">
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:background">@drawable/back_edit_text</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="editTextCambiosGuardados">
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:background">@drawable/back_cambios_guardados</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="textoTitulos">
        <item name="android:textColor">@color/letraBlanca</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/allerta</item>
    </style>

    <style name="textoCardView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/allerta</item>
    </style>

    <style name="cardViews">
        <item name="android:textColor">@color/letraBlanca</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:background">@color/backgroundCardView</item>
        <item name="android:textSize">4sp</item>
    </style>
</resources>
